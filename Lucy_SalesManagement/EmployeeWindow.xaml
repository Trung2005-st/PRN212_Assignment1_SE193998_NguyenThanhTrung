<Window x:Class="Lucy_SalesManagement.EmployeeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LucySale Dashboard"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Width="900" Height="600"
        Background="#F5F7FA">

    <Window.Resources>
        <!-- Nav button style -->
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#44FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Tile button style -->
        <Style x:Key="TileButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="8"
                    SnapsToDevicePixels="True">
                            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                <ContentPresenter HorizontalAlignment="Center" />
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFF0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- 1) Top Navbar -->
        <Grid DockPanel.Dock="Top" Height="60" Background="#2C3E50">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- App name -->
            <TextBlock Text="LucySale" 
                 VerticalAlignment="Center"
                 Margin="24,0,0,0"
                 FontSize="24" 
                 FontWeight="Bold" 
                 Foreground="White"/>

            <!-- Logout -->
            <Button Grid.Column="1"
              Content="Logout"
              Style="{StaticResource NavButton}"
              Margin="0,0,24,0"
              VerticalAlignment="Center"
              Click="Logout_Click"/>
        </Grid>

        <!-- 2) Sub-header: Welcome + username -->
        <Border DockPanel.Dock="Top" 
            Background="White" 
            Padding="16,12" 
            BorderBrush="#EEE" 
            BorderThickness="0,0,0,1">
            <TextBlock x:Name="txtWelcome"
                 FontSize="16"
                 Foreground="#333"/>
        </Border>

        <!-- … sau sub-header … -->
        <!-- 3) Main menu buttons: 2 cột × 2 hàng, buttons nhỏ hơn -->
        <Grid Margin="24" 
      HorizontalAlignment="Center" 
      VerticalAlignment="Center" RenderTransformOrigin="0.519,-0.385">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Manage Customers -->
            <Button Grid.Row="0" Grid.Column="0"
          Style="{StaticResource TileButton}"
          Width="200" Height="60"
          FontSize="16" 
          Margin="8"
          Click="ManageCustomers_Click">
                Manage Customers
            </Button>

            <!-- Manage Products -->
            <Button Grid.Row="0" Grid.Column="1"
          Style="{StaticResource TileButton}"
          Width="200" Height="60"
          FontSize="16" 
          Margin="8"
          Click="ManageProducts_Click">
                Manage Products
            </Button>

            <!-- Create & View Orders -->
            <Button Grid.Row="1" Grid.Column="0"
          Style="{StaticResource TileButton}"
          Width="200" Height="60"
          FontSize="16" 
          Margin="8"
          Click="ManageOrders_Click">
                Create &amp; View Orders
            </Button>

            <!-- Reports -->
            <Button Grid.Row="1" Grid.Column="1"
          Style="{StaticResource TileButton}"
          Width="200" Height="60"
          FontSize="16" 
          Margin="8"
          Click="Reports_Click">
                Reports
            </Button>
        </Grid>

    </DockPanel>
</Window>
